@{
    @model List<tb_login>;
    ViewData["Title"] = "Clientes";

    Layout = "_Layout_dashboard";

}

<div>
    <div class="col-md-12 text-center">
        <h5>Lista de Clientes</h5>
    </div>

<br />

    @if (Model.Count > 0)
    {
        <table class="table table-striped table-sm">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Editar</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td></td>
                        <td>@item.CodigoLogin</td>
                        <td>@item.Nome</td>
                        <td>@item.Email</td>
                        <td><button type="button" class="btn btn-warning btn-sm" onclick="window.location.href='/usuario/updateusuario?CodigoLogin=@item.CodigoLogin'"><i class="fa fa-edit"></i></button></td>
                        <td></td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-primary" role="alert">
            Sem Registros!
        </div>
    }

</div>




