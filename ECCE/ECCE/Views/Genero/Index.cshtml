@{
    @model List<tb_genero>;
    ViewData["Title"] = "Genero";

    Layout = "_Layout_dashboard";

}

<div >
    <table class="table">
        <tr>
            <th><h4>Gêneros</h4></th>
            <th></th>
            <th></th>
            <th class="text-sm-right"><button class="btn btn-primary" type="button" onclick="window.location.href ='/genero/cadastrogenero'">Novo Gênero</button>
            <th>
        </tr>
    </table>
    @if (Model.Count > 0)
    {
<table class="table table-striped table-sm">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.CodigoGenero</td>
            <td>@item.Descricao</td>
            <td></td>
            <td></td>
            <td><button type="button" class="btn btn-warning btn-sm" onclick="window.location.href='/genero/editar?CodigoGenero=@item.CodigoGenero&Descricao=@item.Descricao'"><i class="fa fa-edit"></i></button></td>
           <!-- <td><button type="button" class="btn btn-danger btn-sm" onclick="window.location.href='/genero/excluir?CodigoGenero=@item.CodigoGenero'"><i class="fa fa-trash"></i></button></td>
            -->
        </tr>                }
    </tbody>
</table>
    }
    else
    {
        <div class="alert alert-primary" role="alert">
            Sem Registros!
        </div>
    }

</div>




