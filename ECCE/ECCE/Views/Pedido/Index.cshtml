@{
    @model List<TodosPedidos>;
    ViewData["Title"] = "Genero";

    Layout = "_Layout_dashboard";

}
<hr />
<h4 class="font-weight-bold">Lista de Vendas</h4>
<hr />
<div >

    @if (Model.Count > 0)
    {
<table class="table table-striped table-sm">
    <thead class="thead-dark">
        <tr>
            <th>Venda</th>
            <th>Cliente</th>
            <th>Valor</th>
            <th>Data</th>
            <th>Status</th>
            <th>Editar Status</th>
            <th>Ver Itens</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.CodigoVenda</td>
            <td>@item.Nome</td>
            <td>@item.Valor.ToString("C")</td>
            <td>@item.Data</td>
            <td>@item.Status</td>
            <td><button type="button" class="btn btn-warning btn-sm" onclick="window.location.href='/pedido/Editar?CodigoVenda=@item.CodigoVenda'"><i class="fa fa-edit "></i></button></td>
            <td><button type="button" class="btn btn-warning btn-sm" onclick="window.location.href='/pedido/VerItens?CodigoVenda=@item.CodigoVenda'"><i class="fa fa-search"></i></button></td>
        </tr>                
        }
    </tbody>
</table>
    }
    else
    {
        <div class="alert alert-primary" role="alert">
            Sem Registros!
        </div>
    }

</div>




