@{
                @model List<tb_produto>;
                ViewData["Title"] = "Produto";

                Layout = "_Layout_dashboard"; }

<hr />
<div class="row">
    <div class="col-md-10"><h4 class="font-weight-bold">Lista de Produtos</h4></div>
    <div class=" col-md-2">
        <button class="btn btn-primary" type="button" onclick="window.location.href ='/produto/cadastroproduto'">Novo Produto</button>
    </div>
</div>
<hr />
    <div>
        @if (Model.Count > 0)
        {
<table class="table table-striped table-sm">
    <thead class="thead-dark">
        <tr>
            <th>Código Interno</th>
            <th>Nome</th>
            <th>Valor</th>
            <th>Quantidade</th>
            <th>Ativo</th>
            <th>Tamanho</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>@item.CodigoInterno</td>
    <td>@item.Nome</td>
    <td>@item.Valor.ToString("C")</td>
    <td>@item.Quantidade</td>
    <td>@item.Ativo</td>
    <td>@item.Tamanho</td>
    <td><button type="button" class="btn btn-warning btn-sm" onclick="window.location.href='/produto/editar?CodigoProduto=@item.CodigoProduto&CodigoInterno=@item.CodigoInterno&Descricao=@item.Descricao'"><i class="fa fa-edit"></i></button></td>
</tr>
}
    </tbody>
</table> }
else
{
<div class="alert alert-primary" role="alert">
    Sem Registros!
</div>}

    </div>




